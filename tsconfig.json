{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "lib",
    "removeComments": false,
    "target": "es2020",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "strictNullChecks": true
  },
  "include": ["src"]
}
