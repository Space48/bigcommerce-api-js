{
  "compilerOptions": {
    "module": "ES2020",
    "strict": true,
    "outDir": "lib",
    "removeComments": false,
    "target": "es2018",
    "sourceMap": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["ES2018","DOM"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true
  },
  "include": ["src"]
}
